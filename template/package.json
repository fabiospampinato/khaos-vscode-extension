{
  "name": "{{#scoped}}@{{owner}}/{{/scoped}}{{name}}",
  "displayName": "{{displayName}}",
  "description": "{{description}}",
  "icon": "resources/logo-128x128.png",
  "version": "{{version}}",
  "license": "MIT",
  "main": "out/extension.js",
  "publisher": "{{owner}}",

  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "{{displayName}} - Configuration",
      "properties": {
        "{{settingsName}}.option": {
          "type": "boolean",
          "description": "This is an option",
          "default": true
        }
      }
    },
    "commands": [
      {
        "command": "{{settingsName}}.command",
        "title": "{{displayName}}: Command"
      }
    ],
    "keybindings": [
      {
        "command": "{{settingsName}}.command",
        "key": "ctrl+extra",
        "mac": "cmd+extra"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "rm -rf out && webpack --mode production",
    "publish": "vsce publish && npm publish",
    "compile": "webpack --mode development",
    "compile:watch": "webpack --mode development --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "bugs": {
    "url": "https://github.com/{{owner}}/{{name}}/issues"
  },
  "author": {
    "name": "{{author}}",
    "email": "{{email}}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{owner}}/{{name}}.git"
  },
  "engines": {
    "vscode": "^1.15.0"
  },

  "keywords": [
    "vscode",
    "vsc",
    "extension"
  ],
  "categories": [
    "Other"
  ],

	"dependencies": {
    "@types/lodash": "^4.14.116",
    "@types/node": "^6.0.40",
    "absolute": "0.0.1",
    "chokidar": "^2.0.3",
    "json5": "^0.5.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "pify": "^3.0.0"
  },
  "devDependencies": {
    "ts-loader": "^5.2.1",
    "typescript": "^3.0.3",
    "vscode": "^1.1.4",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
